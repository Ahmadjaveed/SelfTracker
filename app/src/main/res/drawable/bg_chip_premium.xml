<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State: Gradient (simulated with color for vector compatibility, or just solid) -->
    <!-- Using solid color for simplicity in selector -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/gradient_center"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/premium_surface_light"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>

    <!-- Default State: Glass/Outline -->
    <item>
        <shape>
            <solid android:color="@color/glass_fill"/>
            <stroke android:width="1dp" android:color="@color/glass_stroke"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>
</selector>
