<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/outline_variant"
    app:cardBackgroundColor="@color/surface_bright">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Checkbox for completion -->
        <CheckBox
            android:id="@+id/substep_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:buttonTint="@color/primary_light" />

        <!-- Substep Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/substep_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Substep Name"
                android:textSize="14sp"
                android:textColor="@color/on_surface"
                android:fontFamily="sans-serif-medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/substep_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 days"
                    android:textSize="10sp"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/bg_badge_primary"
                    android:backgroundTint="@color/surface_variant"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp" />

                <TextView
                    android:id="@+id/substep_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="10sp"
                    android:textColor="@color/warning"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/btn_substep_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/gray_400" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>