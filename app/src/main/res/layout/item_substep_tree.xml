<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Checkbox for completion -->
        <CheckBox
            android:id="@+id/substep_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp" />

        <!-- Substep Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/substep_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Substep Name"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/substep_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 days"
                    android:textSize="10sp"
                    android:textColor="@color/secondary_text"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_time_modern" />

                <TextView
                    android:id="@+id/substep_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="10sp"
                    android:textColor="@color/warning"
                    android:layout_marginStart="12dp"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_step_milestone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/btn_substep_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert" />

    </LinearLayout>

</androidx.cardview.widget.CardView>