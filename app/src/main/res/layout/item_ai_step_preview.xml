<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/card_background_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                
                <TextView
                    android:id="@+id/text_step_number"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_step_pending"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/text_step_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Learn Variables"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_step_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2 days"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:background="@drawable/bg_badge_primary" 
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_substeps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="• Understand primitive types\n• Practice declaring vars"
                android:textColor="@color/gray_400"
                android:textSize="14sp"
                android:layout_marginStart="36dp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
