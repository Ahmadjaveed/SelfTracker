<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gray_800"
        app:cardBackgroundColor="@color/card_background_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                
                <!-- Circular Step Number -->
                <TextView
                    android:id="@+id/text_step_number"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_circle_primary"
                    android:gravity="center"
                    tools:text="1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/text_step_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Learn Variables"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold" />

                <!-- Duration Badge -->
                <TextView
                    android:id="@+id/text_step_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2 days"
                    android:textColor="@color/primary"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_badge_primary" 
                    android:backgroundTint="#2A2A2A"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_step_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_300"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="40dp"
                tools:text="Brief description of the step."/>

            <!-- Substeps with bullet points -->
            <TextView
                android:id="@+id/text_substeps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="• Understand primitive types\n• Practice declaring vars"
                android:textColor="@color/gray_400"
                android:textSize="13sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginStart="40dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
