<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_dark_card"
    android:padding="24dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/btn_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:contentDescription="Close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Goal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Goal Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_dark"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/img_goal_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_rocket_img"
                    android:scaleType="fitCenter"
                    android:contentDescription="Goal Icon" />

                <EditText
                    android:id="@+id/edit_goal_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginStart="16dp"
                    android:hint="Goal Name"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/text_hint_dark"
                    android:textSize="16sp"
                    android:inputType="textCapSentences"
                    android:maxLines="1" />
            </LinearLayout>

            <!-- Description with Magic Wand -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/edit_goal_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:gravity="top|start"
                    android:background="@drawable/bg_input_dark"
                    android:drawableStart="@drawable/ic_document_minimal" 
                    android:drawablePadding="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp" 
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:hint="Description (Optional)"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/text_hint_dark"
                    android:textSize="14sp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="5" 
                    android:drawableTint="@color/text_secondary_dark"/>

                <!-- Magic Wand Button inside Input -->
                <ImageView
                    android:id="@+id/btn_enhance_description"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_magic_wand"
                    app:tint="@color/accent_blue"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:tooltipText="Enhance with AI"/>
            </FrameLayout>

            <!-- AI Generation Section (Preserved structure, styled) -->
            <LinearLayout
                android:id="@+id/layout_generated_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_input_dark"
                android:padding="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_magic_wand"
                        app:tint="@color/accent_blue"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="AI Roadmap Generator"
                         android:textColor="@color/white"
                         android:textStyle="bold"
                         android:textSize="14sp"/>
                </LinearLayout>
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_generate_ai_steps"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto-Generate Steps âœ¨"
                    android:textColor="@color/accent_blue"
                    app:strokeColor="@color/accent_blue"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/progress_ai_generation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" 
                    android:indeterminateTint="@color/accent_blue"/>

                <TextView
                    android:id="@+id/text_ai_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_plan_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Plan Options"
                    android:visibility="gone"/>
                    
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_generated_steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:contentDescription="Generated Steps"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_save_goal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create Goal"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_blue"
                app:backgroundTint="@null" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>