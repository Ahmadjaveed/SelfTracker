<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/bg_step_row_item">

    <!-- Status Icon -->
    <ImageView
        android:id="@+id/step_status_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_circle_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/primary" />

    <!-- Step Name -->
    <TextView
        android:id="@+id/step_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Step Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/on_surface"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/step_status_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/step_duration"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/chevron_mini" />

    <!-- Duration -->
    <TextView
        android:id="@+id/step_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2 days"
        android:textSize="12sp"
        android:textColor="@color/on_surface_variant"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/step_status_icon"
        app:layout_constraintTop_toBottomOf="@id/step_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chevron_mini"/>

    <!-- Optional: Mini Chevron to indicate it's tappable (if we make rows clickable later, functionality is not there yet but looks nice) -->
    <!-- For now, hiding it or removing it to avoid confusion since row click isn't specific to step details yet in this view -->
    <View
        android:id="@+id/chevron_mini"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
