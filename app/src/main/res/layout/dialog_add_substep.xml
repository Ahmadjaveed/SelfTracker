<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_dark_card">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/btn_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/text_primary_dark"
            android:layout_centerVertical="true"
            android:contentDescription="Close" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Sub-step"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- SubStep Name -->
        <EditText
            android:id="@+id/edit_substep_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input_dark"
            android:drawableStart="@drawable/ic_substep_icon"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:hint="Sub-step Name" 
            android:textCursorDrawable="@null"
            android:textColor="@color/text_primary_dark"
            android:textColorHint="@color/text_hint_dark"
            android:textSize="16sp"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:layout_marginBottom="16dp" 
            android:drawableTint="@color/text_secondary_dark"/>

        <!-- Description -->
        <EditText
            android:id="@+id/edit_substep_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/bg_input_dark"
            android:drawableStart="@drawable/ic_document_minimal" 
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="Description (Optional)"
            android:textCursorDrawable="@null"
            android:textColor="@color/text_primary_dark"
            android:textColorHint="@color/text_hint_dark"
            android:textSize="14sp"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="3"
            android:gravity="top|start"
            android:layout_marginBottom="16dp" 
            android:drawableTint="@color/text_secondary_dark"/>

        <!-- Duration & Unit Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <EditText
                android:id="@+id/edit_substep_duration"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_dark"
                android:drawableStart="@drawable/ic_clock_small"
                android:drawablePadding="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:hint="Duration"
                android:textCursorDrawable="@null"
                android:textColor="@color/text_primary_dark"
                android:textColorHint="@color/text_hint_dark"
                android:textSize="14sp" 
                android:inputType="number"
                android:maxLines="1"
                android:layout_marginEnd="4dp"
                android:drawableTint="@color/text_secondary_dark"/>

            <AutoCompleteTextView
                android:id="@+id/edit_duration_unit"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_dark"
                android:drawableStart="@drawable/ic_ruler"
                android:drawablePadding="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:completionThreshold="1"
                android:hint="Unit"
                android:text="Days"
                android:textCursorDrawable="@null"
                android:textColor="@color/text_primary_dark"
                android:textColorHint="@color/text_hint_dark"
                android:textSize="14sp"
                android:inputType="text|textAutoComplete"
                android:maxLines="1"
                android:layout_marginStart="4dp"
                android:drawableTint="@color/text_secondary_dark"
                android:popupBackground="@drawable/bg_popup_dark"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Create Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_substep"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_blue"
        android:text="Create Sub-step"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

</LinearLayout>