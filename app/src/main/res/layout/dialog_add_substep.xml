<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_header_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">
        
         <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_substep_task" 
            android:layout_marginBottom="8dp"
            app:tint="@color/white"
            android:contentDescription="Sub-step Icon" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Sub-step"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="@color/gray_400"
            app:hintTextColor="@color/primary"
            app:boxStrokeColor="@color/primary"
            android:hint="Sub-step Name">
    
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_substep_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_400"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
    
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="@color/gray_400"
            app:hintTextColor="@color/primary"
            app:boxStrokeColor="@color/primary"
            android:hint="Description (Optional)">
    
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_substep_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_400"
                android:minLines="2" />
        </com.google.android.material.textfield.TextInputLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/gray_400"
                app:hintTextColor="@color/primary"
                app:boxStrokeColor="@color/primary"
                android:hint="Duration">
    
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_substep_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_400"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
    
            <!-- Duration Unit Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_duration_unit"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@color/gray_400"
                app:hintTextColor="@color/primary"
                app:boxStrokeColor="@color/primary"
                android:hint="Unit">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/edit_duration_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/white"
                    android:text="days" />
            </com.google.android.material.textfield.TextInputLayout>
    
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">
            
            <Button
                android:id="@+id/btn_cancel_substep"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/gray_400"
                android:layout_marginEnd="8dp" />
    
            <Button
                android:id="@+id/btn_save_substep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:text="Save"
                android:textColor="@color/white"
                android:paddingHorizontal="24dp" />
    
        </LinearLayout>
    </LinearLayout>

</LinearLayout>