<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>

        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container</item>

        <!-- Compatibility Mapping -->
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorOutline">@color/outline</item>
        
        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- UI Configurations -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!-- SearchView customization -->
        <item name="editTextColor">@color/primary_text</item>
        <item name="android:editTextColor">@color/primary_text</item>
        <item name="hintTextColor">@color/hint_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <style name="DarkToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_400</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!-- Alias for backward compatibility if 'Theme.SelfTracker' is used in Manifest -->
    <style name="Theme.SelfTracker" parent="AppTheme" />

    <!-- COMPONENTS STYLES -->
    
    <!-- Card Style -->
    <!-- Maps to both user requested 'CardStyle' and internal 'Widget.SelfTracker.Card' -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="Widget.SelfTracker.Card" parent="CardStyle"/>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.SelfTracker.SmallComponent</item>
    </style>
    <style name="Widget.SelfTracker.Button" parent="ButtonStyle"/>

    <!-- Input Style -->
    <style name="TextInputStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Shapes -->
    <style name="ShapeAppearance.SelfTracker.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.SelfTracker.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- FAB Styles -->
    <style name="CircularFab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Circular</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom Navigation Text -->
     <style name="BottomNavTextActive" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- High Contrast Popup Menu -->
    <style name="Theme.SelfTracker.PopupOverlay" parent="ThemeOverlay.Material3.Light">
        <item name="android:colorBackground">@color/gray_800</item> <!-- Dark Slate Background -->
        <item name="android:textColor">@color/white</item> <!-- White Text -->
        <item name="android:popupMenuStyle">@style/Widget.SelfTracker.PopupMenu</item>
    </style>

    <style name="Widget.SelfTracker.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    <!-- High Contrast Alert Dialog -->
    <style name="Theme.SelfTracker.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/gray_800</item> <!-- Dark Background -->
        <item name="colorSurface">@color/gray_800</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_300</item>
        <item name="colorPrimary">@color/primary_light</item> <!-- Lighter primary for dark bg -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.SelfTracker.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.SelfTracker.Button.TextButton</item>
    </style>

    <style name="Widget.SelfTracker.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>